#阶乘函数

def r(a):

    sum=1

    for i in range(1,a+1):

        sum*=i

    return sum

#幂函数

def s(x,t):

    m=1

    i=1

    while i<=t:

        m*=x

        i+=1

    return m

i=1

f=-1

s3=0

num=0

n=int(input("输入循环次数："))

x=int(input("输入一个整数（x的值）："))

while True:

    f=f*(-1)

    g=2*i-1

    b=r(g)

    t=s(x,g)

    s3+=t*f/b

    i+=1

    num+=1

    if(num==n):

        print(s3)

        break
